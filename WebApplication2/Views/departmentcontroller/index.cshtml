@using Bussiness_Logic_Layer
@model IEnumerable<depratmentdto>
@{
    ViewData["Title"] = "index";
}

<h1>all department</h1>
<a asp-controller="department" asp-action="Create" class="btn btn-primary">Create department</a>
<br />
<br /> @if (Model.Count() > 0)
{    
    <table class="table table-striped table-hover">         <thead>             <tr>                 <th>@Html.DisplayNameFor(D => D.code)</th>                 <th>@Html.DisplayNameFor(D => D.Name)</th>                 <th>@Html.DisplayNameFor(D => D.createdon)</th>                 <th>Details</th>                 <th>Update</th>                 <th>Delete</th>             </tr>         </thead>         <tbody>             @foreach (var department in Model)
            {
                                 <tr>                     <td>@department.code</td>                     <td>@department.Name</td>                     <td>@department.createdon</td>                     <td>                         <a asp-controller="Department" asp-action="Details" asp-route-id="@department.id" class="btn btn-warning">                             <i class="fas fa-eye"></i> Details                         </a>                     </td>                     <td>                         <a asp-action="Edit" asp-route-id="@department.id" class="btn btn-success">                             <i class="fas fa-edit"></i> Update                         </a>                     </td>                     <td>                         <a asp-action="Delete" asp-route-id="@department.id" class="btn btn-danger">                             <i class="fas fa-trash"></i> Delete                         </a>                     </td>                 </tr>
            }         </tbody>     </table>
}
else
{
         <div class="mt-4 alert alert-warning">         <h4>There is No Department :(</h4>     </div>
}
